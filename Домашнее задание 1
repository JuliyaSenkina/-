//Задание №4

#include <windows.h>
#include <iostream>             


using namespace std;

int main()
{
	float a;
	system("cls");
	cout << "Введите число \n";
	cin >> a;
	cout << "\nКвадрат числа = ";
	cout << a * a;
	return 0;

}

//Задание №5

#include <windows.h>
#include <iostream>             

using namespace std;

int main()
{

	float a,b,c;
	system("cls");
	cout << "Введите первое число \n";
	cin >> a;
	cout << "Введите второе число \n";
	cin >> b;
	cout << "Введите третье число \n";
	cin >> c;
	cout << "\nСумма чисел = ";
	cout << a + b + c;
	cout << "\nПроизведение чисел = ";
	cout << a * b * c;
	return 0;
}
